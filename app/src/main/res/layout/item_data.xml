<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/shape_list_item"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFlag"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_ru" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/priority"
                    android:layout_width="22dp"
                    android:layout_height="6dp"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:lines="1"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:typeface="sans" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/prevStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previousStr"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DCC500"
                android:textSize="@dimen/_16sdp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/foreStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forecastStr"
                android:textColor="#DCC500"
                android:textSize="@dimen/_11sdp"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00B607"
                android:textSize="@dimen/_16sdp"
                android:typeface="sans"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:importantForAccessibility="no"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clock"
                app:tint="#00B607" />

            <TextView
                android:id="@+id/actStr"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/actualStr"
                android:textColor="#00B607"
                android:textSize="@dimen/_11sdp"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
